<div class="title">
  <h1>Settings</h1>
</div>

<div class="concontainer">
  <div class="container">
    <h1>Change ID Checker</h1>
    <form method="POST" action="/settings/idchecker">
      <div class="form-group">
        <input
          type="text"
          id="username"
          name="idchecker"
          value="{{idChecker}}"
          placeholder="Enter the new id checker url"
        />
      </div>
      <button type="submit">Save</button>
    </form>
  </div>
  <div class="container">
    <h1>Background Image</h1>
    <form method="POST" action="/settings/bgimage">
      <div class="form-group">
        <input
          type="text"
          id="username"
          name="bgImg"
          value="{{user.bgImg}}"
          placeholder="Enter the image url"
        />
      </div>
      <button type="submit">Save</button>
    </form>
  </div>

    <div class="container">
    <h1>User Data</h1>
    <form method="POST" action="/settings/user">
        <div class="form-group">
            <input
                type="text"
                id="username"
                name="username"
                value="{{user.username}}"
                placeholder="Enter your name"
            />
        </div>
        <div class="form-group">
            <input
                type="text"
                id="username"
                name="profilePic"
                value="{{user.profilePic}}"
                placeholder="Enter the profile image url"
            />
        </div>
      <button type="submit">Save</button>
    </form>
  </div>
</div>

