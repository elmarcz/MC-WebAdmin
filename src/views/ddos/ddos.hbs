<div class="title">
  <h1>DDOS</h1>
</div>
<div class="contentainer mainpage">
  <button>
    <span class="button_top" id="attacks"> Attacks </span>
  </button>

  <button>
    <span class="button_top button_servers" id="servers"> Servers </span>
  </button>

  <button>
    <span class="button_top button_analytics" id="analytics"> Analytics </span>
  </button>

</div>

<style>
  button {
  /* Variables */
  --button_radius: 0.75em;
  --button_color: #e8e8e8;
  --button_outline_color: #000000;
  font-size: 17px;
  font-weight: bold;
  border: none;
  border-radius: var(--button_radius);
  background: var(--button_outline_color);
  margin: 10px;
}

.button_top {
  display: block;
  box-sizing: border-box;
  border: 2px solid var(--button_outline_color);
  border-radius: var(--button_radius);
  padding: 0.75em 1.5em;
  color: var(--button_outline_color);
  transform: translateY(-0.2em);
  transition: transform 0.1s ease;
  background: linear-gradient(45deg, #FF5F6D, #FFC371);
}

.button_servers {
  background: linear-gradient(45deg, #eeaeca, #94bbe9);
}

.button_analytics{
  background: linear-gradient(to right, #1488cc, #2b32b2);
}

button:hover .button_top {
  /* Pull the button upwards when hovered */
  transform: translateY(-0.33em);
}

button:active .button_top {
  /* Push the button downwards when pressed */
  transform: translateY(0);
}
</style>

<style>
    body{
    overflow: hidden;
  }
  *{ text-decoration: none; } .title{ width: 98vw; height: 70px; display: flex;
  justify-content: center; align-items: center; font-size: 20px; margin: 20px; }
  .title h1 { height: 25px; margin-bottom: 20px; }
</style>

<script>
  const buttonAttacks = document.querySelector("#attacks")
  const buttonServers = document.querySelector("#servers")
  const buttonAnalytics = document.querySelector("#analytics")

  buttonAttacks.addEventListener("click", (e) => {
    window.location.href = "/attacks"
  })

  buttonServers.addEventListener("click", (e) => {
    window.location.href = "/servers"
  })

  buttonAnalytics.addEventListener("click", (e) => {
    window.location.href = "/analytics"
  })
</script>

