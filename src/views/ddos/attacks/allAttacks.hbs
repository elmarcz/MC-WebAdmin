<div class="title">
  {{#if title}}
    <h1>{{title}}</h1>
    {{#if totalAttacks}}
      <p>Results ({{totalAttacks}})</p>
    {{/if}}
  {{else}}
    <h1>All Attacks</h1>
  {{/if}}
</div>
<div class="contentainer">
  {{#each data}}
    <a class="server" href="/attacks/attack/{{_id}}">
      <h2>Server Id: {{serverID}}</h2>
      <h2>Url: {{url}}</h2>
      <h2>Times: {{times}}</h2>
      <h2>Time: {{time}}</h2>
      <h2>Hour Start: {{hourStart}}</h2>
      <h2>Hour End: {{hourEnd}}</h2>
      <h2>Public IP: {{publicIP}}</h2>
      <h2>Private IP: {{privateIP}}</h2>
      <h2>Port: {{port}}</h2>
    </a>
  {{/each}}
</div>

<style>
  *{ text-decoration: none; } .title{ width: 100vw; display: flex;
  justify-content: center; align-items: center; font-size: 20px; } .server {
  height: 250px; margin: 15px; background: hsl(218deg 50% 91%); border-radius:
  15px; color: black; display: flex; align-items: center; transition: all 200ms;
  display: flex; flex-direction: column; align-items: baseline; padding: 12px; }
</style>

