<script>
  let element = document.querySelector("#month") 
  let today = new Date() 
  let month = today.getMonth() + 1 
  const months = [ "January", "February", "March",
  "April", "May", "June", "July", "August", "September", "October", "November",
  "December" ]; 
  if (month >= 1 && month <= 12) { 
    month = months[month - 1]; 
  }
  element.innerHTML = month

  let left = document.querySelector("#left")
  let rigth = document.querySelector("#rigth")

  left.addEventListener("click", (e) => {
    if(left.classList.contains("comprimed")){
        left.classList.remove("comprimed")
    } else {
        left.classList.add("comprimed")
    }
  })

  rigth.addEventListener("click", (e) => {
    if(rigth.classList.contains("comprimed")){
        rigth.classList.remove("comprimed")
    } else {
        rigth.classList.add("comprimed")
    }
  })
</script>

