<div class="title">
  <h1>Analytics</h1>
</div>
<div class="contentainer mainpage">
  <div class="left" id="left">
    <h1 id="month">Attack</h1>
    {{#if attackMonth}}
      {{#each attackMonth}}
        <a class="server card" href="/attacks/attack/{{_id}}">
          <p>Url: {{url}}</p>
          <p>Times: {{times}}</p>
          <p>Time: {{time}}</p>
        </a>
      {{/each}}
    {{else}}
      <a class="server card">
        <h2>There have been no attacks this month</h2>
      </a>
    {{/if}}
  </div>
  <div class="rigth" id="rigth">
    <h1>Today</h1>
    {{#if attackDay}}
      {{#each attackDay}}
        <a class="server card" href="/attacks/attack/{{_id}}">
          <p>Url: {{url}}</p>
          <p>Times: {{times}}</p>
          <p>Time: {{time}}</p>
        </a>
      {{/each}}
    {{else}}
      <a class="server card">
        <h2>There have been no attacks today</h2>
      </a>
    {{/if}}
  </div>
</div>

{{>ddos}}

