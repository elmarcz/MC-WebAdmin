<div class="title">
  <h1>home</h1>
</div>
<div class="contentainer mainpage">
  <div class="left">
    <h1 id="month">Attack</h1>
    {{#if attackMonth}}
      {{#each attackMonth}}
        <a class="server card" href="/attacks/attack/{{_id}}">
          <h2>{{url}}</h2>
        </a>
      {{/each}}
    {{else}}
      <a class="server card">
        <h2>no attacks on this month.</h2>
      </a>
    {{/if}}
  </div>
  <div class="rigth">
    <h1>today</h1>
    {{#if attackDay}}
      {{#each attackDay}}
        <a class="server card" href="/attacks/attack/{{_id}}">
          <h2>{{url}}</h2>
        </a>
      {{/each}}
    {{else}}
      <a class="server card">
        <h2>no attacks today.</h2>
      </a>
    {{/if}}
  </div>
</div>

{{>settings}}

